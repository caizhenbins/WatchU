<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/DIMEN_120PX"
    android:background="#0df">

    <Button
        android:id="@+id/warn_send_message"
        android:layout_width="@dimen/DIMEN_400PX"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_marginTop="@dimen/DIMEN_120PX"
        android:text="发送短信警告"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/security_button_shape"/>

    <Button
        android:id="@+id/warn_send_true"
        android:layout_width="@dimen/DIMEN_400PX"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_marginTop="@dimen/DIMEN_64PX"
        android:text="网络发送警告"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/security_button_shape"/>

    <Button
        android:id="@+id/warn_send_false"
        android:layout_width="@dimen/DIMEN_400PX"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_marginTop="@dimen/DIMEN_64PX"
        android:text="网络取消警告"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/security_button_shape"/>

</LinearLayout>